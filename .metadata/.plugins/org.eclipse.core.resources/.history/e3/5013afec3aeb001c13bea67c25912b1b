package com.generation.controllers;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;//importar restcontroller

//Restcontroller despliega la pagina web
@RestController //importar controller, ruta controlador
@Controller
public class IndexController {

	
//en los parentesis se establece la anotacion para capturar las rutas,1Â°ruta
	@RequestMapping("/") //vendria siendo localhost (http://localhost:8080/
	public String index() {
		return "index.jsp"; // abrir ruta de otro archivo, siempre en comillas
		
		
	}
}